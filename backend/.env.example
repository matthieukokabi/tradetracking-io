# ===========================================
# TradeTracking.io Backend Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# -------------------------------------------
# REQUIRED - Environment
# -------------------------------------------

# Set to "production" in production
ENVIRONMENT=development

# -------------------------------------------
# REQUIRED - MongoDB Database
# -------------------------------------------

# MongoDB connection string
# Local: mongodb://localhost:27017/tradetracking
# Atlas: mongodb+srv://username:password@cluster.mongodb.net/tradetracking
MONGODB_URL=mongodb://localhost:27017/tradetracking

# -------------------------------------------
# REQUIRED - JWT Authentication
# -------------------------------------------

# Secret key for JWT signing (generate with: openssl rand -hex 32)
SECRET_KEY=your-super-secret-key-change-this-in-production

# JWT algorithm (don't change unless you know what you're doing)
# Note: Currently hardcoded as HS256 in auth.py

# -------------------------------------------
# REQUIRED - CORS Configuration
# -------------------------------------------

# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://tradetracking.io,https://www.tradetracking.io

# -------------------------------------------
# REQUIRED FOR EXCHANGE SYNC - Encryption
# -------------------------------------------

# 32-byte Fernet key for encrypting API keys
# Generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
ENCRYPTION_KEY=

# -------------------------------------------
# OPTIONAL - Stripe Payments
# -------------------------------------------
# Get these from: https://dashboard.stripe.com/apikeys

# Stripe Secret Key (starts with sk_test_ or sk_live_)
STRIPE_SECRET_KEY=

# Stripe Webhook Secret (starts with whsec_)
# Get this when you create a webhook endpoint in Stripe Dashboard
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for subscription plans
# Create these in Stripe Dashboard > Products
STRIPE_PRO_MONTHLY_PRICE_ID=
STRIPE_PRO_YEARLY_PRICE_ID=
STRIPE_ELITE_MONTHLY_PRICE_ID=
STRIPE_ELITE_YEARLY_PRICE_ID=
